{% extends 'base.html.twig' %}
{% form_theme formModif 'bootstrap_4_layout.html.twig' %}

{% block body %}
<div class="bg-light m-5 p-5 rounded">

{{ form_start(formModif) }}

{{ form_row(formModif.title, {'attr': {'placeholder': "Renseigner le titre"}}) }}
{{ form_row(formModif.content, {'attr': {'placeholder': "Renseigner contenu"}}) }}
{{ form_row(formModif.image, {'attr': {'placeholder': "Renseigner l'URL de l'image'"}}) }}
{{ form_row(formModif.category) }}

