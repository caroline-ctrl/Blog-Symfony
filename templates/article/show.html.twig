{% extends 'base.html.twig' %}

{% block body %}
<article class="row">
    <article class="col-4 card text-white bg-primary m-3" style="max-width: 20rem;">
        <h2 class="card-header">{{ article.title }}</h2>
        <h6>le {{ article.createdAt | date('d/m/y') }} Ã  {{ article.createdAt | date('H:i') }}</h6>
        <div class="card-body">
            <img class="card-title" src="{{ article.image }}" alt="">
            <p class="card-text">{{ article.content }}</p>
            <hr>
            <a class="btn btn-success" href="{{ path('modif', {'id': article.id} )}}">Modifier</a>
            <a class="btn btn-danger" href="{{ path('supp', {'id': article.id} )}}">Supprimer</a>
        </div>
    </article>
</article>

{% endblock %}